<section class="manage-properties-page">
    <div class="container">
        <h1 class="page-title">Manage Properties</h1>
        
        <div class="manage-header">
            <p>View, edit, or delete properties from the database</p>
        </div>
        
        <div class="properties-management" id="propertiesManagement">
            <div class="loading-spinner">Loading properties...</div>
        </div>
    </div>
</section>

<!-- Edit Property Modal -->
<div id="editPropertyModal" class="modal">
    <div class="modal-content modal-large">
        <span class="close-modal">&times;</span>
        <h2>Edit Property</h2>
        <form id="editPropertyForm">
            <input type="hidden" id="editPropId">
            <!-- Form fields will be populated dynamically -->
            <div id="editFormContent"></div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Update Property</button>
                <button type="button" class="btn btn-secondary close-modal-btn">Cancel</button>
            </div>
            <div id="editFormMessage" class="form-message"></div>
        </form>
    </div>
</div>

<script src="/js/manage-properties.js"></script>

