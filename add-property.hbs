<section class="add-property-page">
    <div class="container">
        <h1 class="page-title">Add New Property</h1>
        
        <form id="addPropertyForm" class="property-form">
            <div class="form-section">
                <h2>Basic Information</h2>
                <div class="form-row">
                    <div class="form-group">
                        <label for="propTitle">Property Title *</label>
                        <input type="text" id="propTitle" required>
                    </div>
                    <div class="form-group">
                        <label for="propType">Property Type *</label>
                        <select id="propType" required>
                            <option value="">Select Type</option>
                            <option value="House">House</option>
                            <option value="Apartment">Apartment</option>
                            <option value="Condo">Condo</option>
                            <option value="Townhouse">Townhouse</option>
                            <option value="Villa">Villa</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="propDescription">Description *</label>
                    <textarea id="propDescription" rows="5" required></textarea>
                </div>
            </div>
            
            <div class="form-section">
                <h2>Pricing & Status</h2>
                <div class="form-row">
                    <div class="form-group">
                        <label for="propPrice">Price ($) *</label>
                        <input type="number" id="propPrice" required>
                    </div>
                    <div class="form-group">
                        <label for="propStatus">Status *</label>
                        <select id="propStatus" required>
                            <option value="For Sale">For Sale</option>
                            <option value="For Rent">For Rent</option>
                            <option value="Sold">Sold</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h2>Location</h2>
                <div class="form-row">
                    <div class="form-group">
                        <label for="propAddress">Address *</label>
                        <input type="text" id="propAddress" required>
                    </div>
                    <div class="form-group">
                        <label for="propCity">City *</label>
                        <input type="text" id="propCity" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="propState">State *</label>
                        <input type="text" id="propState" required>
                    </div>
                    <div class="form-group">
                        <label for="propZip">Zip Code *</label>
                        <input type="text" id="propZip" required>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h2>Property Details</h2>
                <div class="form-row">
                    <div class="form-group">
                        <label for="propBedrooms">Bedrooms *</label>
                        <input type="number" id="propBedrooms" min="1" required>
                    </div>
                    <div class="form-group">
                        <label for="propBathrooms">Bathrooms *</label>
                        <input type="number" id="propBathrooms" min="1" step="0.5" required>
                    </div>
                    <div class="form-group">
                        <label for="propArea">Area (sq ft) *</label>
                        <input type="number" id="propArea" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="propParking">Parking Spaces</label>
                        <input type="number" id="propParking" min="0">
                    </div>
                    <div class="form-group">
                        <label for="propYearBuilt">Year Built</label>
                        <input type="number" id="propYearBuilt" min="1800" max="2024">
                    </div>
                </div>
                <div class="form-group">
                    <label for="propFeatures">Features (comma-separated)</label>
                    <input type="text" id="propFeatures" placeholder="e.g., Pool, Garage, Garden">
                </div>
                <div class="form-group">
                    <label for="propImages">Image URLs (one per line)</label>
                    <textarea id="propImages" rows="3" placeholder="https://example.com/image1.jpg"></textarea>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Add Property</button>
                <button type="reset" class="btn btn-secondary">Reset Form</button>
            </div>
            <div id="propertyFormMessage" class="form-message"></div>
        </form>
    </div>
</section>

<script src="/js/add-property.js"></script>

